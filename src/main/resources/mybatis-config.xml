<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>

    <typeAliases>
        <package name="com.aliyun.code.typist.model"/>
    </typeAliases>

    <environments default="dev">
        <environment id="dev">
            <transactionManager type="JDBC">
                <property name="" value=""/>
            </transactionManager>
            <dataSource type="UNPOOLED">
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://localhost:3306/mybatis" />
                <property name="username" value="root"/>
                <property name="password" value="rootXYZ"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mapper/SysUserMapper.xml" />
        <!--<mapper resource="mapper/SysRoleMapper.xml" />-->
        <!--<mapper resource="mapper/SysUserRoleMapper.xml" />-->
        <!--<mapper resource="mapper/SysPrivilegeMapper.xml" />-->
        <!--<mapper resource="mapper/SysRolePrivilegeMapper.xml" />-->
    </mappers>
</configuration>
