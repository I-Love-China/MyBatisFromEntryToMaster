<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aliyun.code.typist.mapper.PrivilegeMapper">
    <cache type="org.mybatis.caches.redis.RedisCache" />
    <resultMap id="privilegeMap" type="com.aliyun.code.typist.model.SysPrivilege">
        <id property="id" column="id" />
        <result property="privilegeName" column="privilege_name" />
        <result property="privilegeUrl" column="privilege_url" />
    </resultMap>

    <select id="selectById" resultType="SysPrivilege">
        select * from sys_privilege where id = #{id}
    </select>

    <select id="selectAll" resultMap="privilegeMap">
        select * from sys_privilege
    </select>

    <insert id="insert">
        insert into sys_privilege(privilege_name, privilege_url)
        values(#{privilegeName}, #{privilegeUrl})

        <selectKey keyProperty="id" keyColumn="id" resultType="long" order="AFTER"> <!-- order 和 SQL 对于不同的数据库有不同的设置-->
            select last_insert_id()
        </selectKey>
    </insert>
</mapper>